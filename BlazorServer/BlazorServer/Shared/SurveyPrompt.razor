@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SurveyPrompt> T

<div class="alert alert-secondary mt-4">
    <span class="oi oi-pencil me-2" aria-hidden="true"></span>
    <strong>@Title</strong>

    <span class="text-nowrap">
        @Prompt
    </span>
</div>

@code {
    // Demonstrates how a parent component can supply parameters
    [Parameter]
    public string? Title { get; set; }

    private const string AnchorTemplate = "<a target=\"_blank\" class=\"font-weight-bold link-dark\" href=\"https://go.microsoft.com/fwlink/?linkid=2149017\">{0}</a>";

    private string Anchor => string.Format(AnchorTemplate, T["brief survey"]);

    private MarkupString Prompt => (MarkupString) string.Format(T["Please take our {0} and tell us what you think."], Anchor);
}